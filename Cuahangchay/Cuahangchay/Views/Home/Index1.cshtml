@* Khai báo Model, giả sử trang chủ hiển thị một vài món ăn nổi bật *@
@model List<Cuahangchay.Models.MonChay>

@{
    ViewData["Title"] = "Trang chủ";
   
}


@* Phần giới thiệu cửa hàng *@
<section class="jumbotron text-center bg-light p-5">
    <div class="container">
        <h1 class="jumbotron-heading display-4 fw-bold">Chào mừng đến với Cửa Hàng Chay Thanh Lương</h1>
        <p class="lead text-muted">Nơi lan tỏa ẩm thực chay tinh tế, với những món ăn được chế biến từ nguyên liệu tươi ngon và phục vụ tận tâm.</p>
        <p>
           
            <a href="/Home/Menu" class="btn btn-success my-2 btn-lg">Xem Thực Đơn Ngay</a>
        </p>
    </div>
</section>

@* Phần hiển thị các món ăn nổi bật *@
<div class="album py-5 bg-white">
    <div class="container">
        <h2 class="text-center mb-4">Các Món Ăn Nổi Bật</h2>
        @if (Model != null && Model.Any())
        {
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            <img src="@item.HinhAnh" class="card-img-top" alt="@item.TenMon" style="object-fit: cover; height: 200px;">
                            <div class="card-body">
                                <h5 class="card-title">
                                    @item.TenMon
                                    @if (item.ConTon)
                                    {
                                        <span class="badge bg-success float-end">Còn hàng</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger float-end">Hết hàng</span>
                                    }
                                </h5>
                                <p class="card-text text-muted">@item.MoTa</p>
                            </div>
                            <div class="card-footer">
                                <h5 class="fw-bold text-primary">@item.Gia.ToString("N0") VNĐ</h5>
                                @if (item.ConTon)
                                {
                                    <form asp-action="AddToCart" asp-controller="Home" method="post">
                                        <input type="hidden" name="monId" value="@item.MonID" />
                                        
                                        
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-warning text-center" role="alert">
                Hiện tại chưa có món ăn nào trong thực đơn.
            </div>
        }
    </div>
</div>