@* Fix for CS8602: Dereference of a possibly null reference *@  
@using Microsoft.AspNetCore.Identity  

<!DOCTYPE html>  
<html>  
<head>  
    <meta charset="utf-8" />  
    <title>@ViewData["Title"] - Nhà hàng Chay</title>  
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />  
</head>  
<body>  

    <ul class="navbar-nav flex-grow-1">  
        @* Đây là các liên kết công khai, ví dụ: Trang chủ, Thực đơn... *@  
        <li class="nav-item">  
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>  
        </li>  
        <li class="nav-item">  
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Menu">Thực đơn</a>  
        </li>
        <li class="nav-item">  
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Liên hệ</a>
        </li>
        <li class="nav-item">  
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">Giới thiệu</a>
        </li>
        @* Đây là liên kết đăng nhập, đăng ký, v.v. *@

        @* Bắt đầu phần chỉ hiển thị với Admin *@  
        @if (User?.Identity?.IsAuthenticated == true && User?.IsInRole("Admin") == true)  
        {  
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">
                    Tra
                </a>  
            </li>  
        }  
    </ul>  
    <div class="container py-4">  
        @RenderBody()  
    </div>  

    <footer class="bg-light text-center py-3 mt-5">  
        <p>&copy; 2025 Nhà hàng Chay</p>  
    </footer> 
    @RenderSection("Scripts", required: false)
</body>  
</html>
