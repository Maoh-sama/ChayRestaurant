@model List<Cuahangchay.Models.NhanVien>
@{
    ViewData["Title"] = "Quản lý Nhân viên";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Khung đen: Tiêu đề của mục đã ấn -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Quản lý Nhân viên</h1>
</div>

<!-- Hai ô xanh: Nút Tìm kiếm và Chỉnh -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <div>
        <a href="#" class="d-none d-sm-inline-block btn btn-info btn-sm shadow-sm">
            <i class="fas fa-search"></i> Tìm kiếm <!-- Biểu tượng tìm kiếm, bạn thêm link sau -->
        </a>
        <a href="#" class="d-none d-sm-inline-block btn btn-success btn-sm shadow-sm">
            <i class="fas fa-edit"></i> Chỉnh <!-- Biểu tượng chỉnh sửa, bạn thêm link sau -->
        </a>
    </div>
</div>

<!-- Khung đỏ: Bảng dữ liệu -->
<div class="row">
    <div class="col-xl-12 col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Danh sách nhân viên</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Mã NV</th>
                                <th>Họ tên</th>
                                <th>SĐT</th>
                                <th>Email</th>
                                <th>Vai trò</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.NhanVienID</td>
                                    <td>@item.HoTen</td>
                                    <td>@item.SDT</td>
                                    <td>@item.Email</td>
                                    <td>@item.VaiTro</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Chú thích: Script cho DataTable -->
@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });
    </script>
    <!-- Chú thích: Thêm thư viện jQuery và DataTable để hiển thị bảng có phân trang, tìm kiếm -->
}