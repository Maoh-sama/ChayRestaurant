@model List<Cuahangchay.Models.MonChay>
@{
    ViewData["Title"] = "Quản lý Món Chay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Quản lý Món Chay</h1>
</div>

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <div>
        <a href="#" class="d-none d-sm-inline-block btn btn-info btn-sm shadow-sm">
            <i class="fas fa-search"></i> Tìm kiếm
        </a>
        <a asp-action="Create" asp-controller="MonChays" class="d-none d-sm-inline-block btn btn-success btn-sm shadow-sm">
            <i class="fas fa-plus"></i> Thêm mới
        </a>
    </div>
</div>

<div class="row">
    <div class="col-xl-12 col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Danh sách món ăn</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Mã món</th>
                                <th>Tên món</th>
                                <th>Hình ảnh</th>
                                <th>Giá</th>
                                <th>Tồn kho</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.MonID</td>
                                    <td>@item.TenMon</td>
                                    <td><img src="@item.HinhAnh" alt="@item.TenMon" style="width: 80px; height: 80px; object-fit: cover;" /></td>
                                    <td>@item.Gia.ToString("N0") VNĐ</td>
                                    <td>
                                        @if (item.ConTon)
                                        {
                                            <span class="badge bg-success">Còn hàng</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Hết hàng</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-controller="MonChays" asp-route-id="@item.MonID" class="btn btn-info btn-sm">
                                            <i class="fas fa-info-circle"></i> Chi tiết
                                        </a>
                                        <a asp-action="Edit" asp-controller="MonChays" asp-route-id="@item.MonID" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i> Sửa
                                        </a>
                                        <a asp-action="Delete" asp-controller="MonChays" asp-route-id="@item.MonID" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Xóa
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });
    </script>
}