@model Cuahangchay.Models.TaiKhoan
@{
    ViewData["Title"] = "Edit";
}

<h1>Chỉnh sửa tài khoản</h1>
<h4>@Model.Username</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Username" />
            <div class="form-group">
                <label asp-for="MatKhau" class="control-label">Mật khẩu mới (để trống nếu không thay đổi)</label>
                <input asp-for="MatKhau" class="form-control" type="password" />
                <span asp-validation-for="MatKhau" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quyen" class="control-label"></label>
                <select asp-for="Quyen" class="form-control">
                    <option value="Admin">Admin</option>
                    <option value="Bep">Bep</option>
                    <option value="ThuNgan">ThuNgan</option>
                    <option value="User">User</option>
                </select>
                <span asp-validation-for="Quyen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NhanVienID" class="control-label"></label>
                <select asp-for="NhanVienID" class="form-control" asp-items="ViewBag.NhanVienID">
                    <option value="">Không liên kết</option>
                </select>
                <span asp-validation-for="NhanVienID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-action="Index" asp-controller="TaiKhoan" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}