@* Fix for CS8602: Dereference of a possibly null reference *@  
@using Microsoft.AspNetCore.Identity  

<!DOCTYPE html>  
<html>  
<head>  
    <meta charset="utf-8" />  
    <title>@ViewData["Title"] - Nhà hàng Chay</title>  
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Poppins', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #F5F3EF;
        }

        .navbar-custom {
            background-color: #4E342E !important; 
        }

        .navbar-brand {
            font-weight: 600;
            font-size: 1.5rem;
        }

        .content-wrapper {
            max-width: 1140px;
            margin: 0 auto;
            padding: 40px 15px;
        }

        footer {
            background-color: #3E2723;
            color: white;
            text-align: center;
            padding: 20px 0;
        }

        h1, h2, h3, h4 {
            font-weight: 600;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Home/Index1">Cửa Hàng Chay Thanh Lương</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    
                    <li class="nav-item"><a class="nav-link" href="/Home/Index">Đăng Xuất</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Menu">Thực đơn</a></li>
         
                    <li class="nav-item"><a class="nav-link" href="/Home/About">Giới thiệu</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Contact">Liên hệ</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/ViewCart">Giỏ hàng</a></li>
                    
                </ul>
            </div>
        </div>
    </nav>

    <div class="content-wrapper">
        @RenderBody()
    </div>

    <footer class="bg-light text-center py-3 mt-5">  
        <p>&copy; 2025 Nhà hàng Chay</p>  
    </footer> 
    @RenderSection("Scripts", required: false)
</body>  
</html>
